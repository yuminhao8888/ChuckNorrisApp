<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.StartFragment">


    <Button
        android:id="@+id/buttonRandomJoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random joke"
        app:layout_constraintBottom_toTopOf="@+id/buttonTextInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTextInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text input"
        app:layout_constraintBottom_toTopOf="@+id/buttonNeverEnding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRandomJoke" />

    <Button
        android:id="@+id/buttonNeverEnding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Never ending list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTextInput" />

</androidx.constraintlayout.widget.ConstraintLayout>